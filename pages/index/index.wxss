/* pages/index/index.wxss */
#container{
  width: 90%;
  height: 95%;
  padding: 5%;
  font-family: sans-serif;
}
  #header{
    width: 100%;
    height: 200rpx;
    display: flex;
    align-items: center;
  }
    #headerLeft{
      width: 40%;
      flex: 1;
    }
      .headerTitle{
        font-size: 50rpx;
        display: block;
      }
      #headerTitleTip{
        font-size: 26rpx;
      }
    #headerRight{
      width: 50%;
      flex: 0;
    }
      #headerRight image{
        width: 90rpx;
        height: 90rpx;
        border-radius: 45rpx;
      }
  #title{
    margin: 5% 0 0 0;
  }
    .items{
      width: 100%;
      height: 100rpx;
      line-height: 100rpx;
      position: relative;
      border-top: 4rpx dotted rgba(120, 120, 120, 0.2);
    }
    #items{
      border-bottom: 4rpx dotted rgba(120, 120, 120, 0.2);
    }
      .items image{
        width: 45rpx;
        height: 45rpx;
        position: absolute;
        top: 25%;
      }
      .items text{
        font-size: 36rpx;
        position: absolute;
        left: 10%;
      }
      .items button{
        width: 130rpx;
        height: 50rpx;
        line-height: 45rpx;
        border: 2rpx solid #25A136;
        border-radius: 15rpx;
        background: #FFFFFF;
        font-size: 26rpx;
        color: #25A136;
        position: absolute;
        left: 79%;
        top: 25%;
      }
      .items button::after{
        border: none;
      }
  #contact{
    margin: 5% 0 0 0;
  }
    .contactContent{
      width: 100%;
      height: 100rpx;
      line-height: 100rpx;
      position: relative;
    }
      .contactContent image{
        width: 45rpx;
        height: 45rpx;
        position: absolute;
        top: 25%;
      }
      .contactContent text{
        font-size: 30rpx;
        position: absolute;
        left: 10%;
      }
      .contactContent .rimage{
        width: 35rpx;
        height: 35rpx;
        line-height: 35rpx;
        font-size: 26rpx;
        color: #78CB74;
        position: absolute;
        left: 94%;
        top: 35%;
      }
  #footerImages{
    width: 100%;
  }
    .scroll{
      width: 100%;
      height: 300rpx;
      white-space: nowrap;
      display: flex;
      overflow : auto;
    }
    .images{
      width: 500rpx;
      height: 300rpx;
      display: inline-block;
    }
    .images image{
      width: 98%;
      height: 300rpx;
    }