/* pages/welcome/welcome.wxss */
page{
  width: 100%;
  height: 100vh;
}
#container{
  width: 100%;
  height: 100%;
}
#logo{
  width: 35%;
  margin:0 auto;
  padding-top: 20%;
  text-align: center;
}
#logo image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 60rpx;
}
#logo text{
  font-size: 36rpx;
  margin-top:20%; 
  display: block;
}
#eText{
  width: 35%;
  height: 100px;
  margin: 90% auto 0 ;
  text-align: center;
}
#eText button{
  height: 65rpx;
  line-height: 65rpx;
  border-radius: 0;
  background: rgba(0,0,0,0);
  border: 1px solid #000;
}
#eText button::after{
  border: none;
}